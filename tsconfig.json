{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "lib": ["ES2016"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "outDir": "build",
    "rootDir": "src",
    "types": ["node", "express", "body-parser", "cors"],
    "paths": {
      "@src/*": ["./*"],
      "@databases/*": ["databases/*"],
      "@interfaces/*": ["interfaces/*"],
      "@middleware/*" :["middleware/*"],
      "@models/*":["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "@websocket/*" :["websocket/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build",],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
}
}